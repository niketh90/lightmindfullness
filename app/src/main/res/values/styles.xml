<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
         <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
     </style>
    <style name="Home_TextLabelblack" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/hintText</item>
        <item name="android:labelTextSize">3sp</item>

         <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/hintText</item>
        <item name="colorControlNormal">@color/hintText</item>
        <item name="colorControlActivated">@color/hintText</item>
    </style>
    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">false</item>
<!--        <item name="android:windowContentOverlay">@null</item>-->
        <item name="android:fitsSystemWindows">false</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="windowActionBarOverlay">true</item>
         <item name="statusBarBackground">@color/transParent</item>
 </style>

<style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
<item name="android:background"> @null </item>
<!-- Support library compatibility -->
<item name="background">@null</item>
<item name="android:displayOptions">useLogo|showHome</item>
<item name="displayOptions">showHome|useLogo</item>

</style>
    <style name="Shap" parent="Theme.MaterialComponents.Light">
        <item name="cornerFamily">rounded</item>
        <item name="android:src">@mipmap/img_login</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_50sdp</item>
    </style>
    <style name="circleShape" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/audio_circle</item>
        <item name="android:indeterminate">true</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:src">@mipmap/img_login</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_50sdp</item>
    </style>
    <style name="progressBarBlue" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/lightcolorPrimary</item>
        <item name="bar_height">2dp</item>

     </style>
</resources>
