<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/android_bg">
<ImageView
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_height="match_parent"
    android:src="@mipmap/icn_ongoing1"
    android:id="@+id/ivImg"
    android:layout_marginTop="@dimen/_100sdp"
    android:layout_marginBottom="@dimen/_200sdp"/>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@+id/ivImg"
        app:layout_constraintEnd_toEndOf="@+id/ivImg"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"
         android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:lineSpacingExtra="@dimen/_2ssp"
        android:textAlignment="center"
        android:id="@+id/tvTxt"
        android:fontFamily="@font/museosansrounded_700_webfont"
        app:layout_constraintTop_toBottomOf="@+id/ivImg"/>

</androidx.constraintlayout.widget.ConstraintLayout>