<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/img_bggrediant"
    android:paddingTop="@dimen/_15sdp"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mtoolbar"
        android:layout_marginTop="@dimen/_10sdp"

        android:layout_marginLeft="@dimen/_25sdp"
         android:layout_marginRight="@dimen/_25sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icn_home_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/museosansrounded_900_webfont"
            android:text="@string/about"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivBack"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:src="@mipmap/icn_back_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:id="@+id/ivUserImage"
        app:layout_constraintTop_toBottomOf="@+id/mtoolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@mipmap/profilepic_placeholder"
        />
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivUserImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:text="User Naae"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/museosansrounded_700_webfont"/>
    <View
        android:id="@+id/vv"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@color/lighttrans"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

    <TextView
        android:layout_marginLeft="@dimen/_25sdp"
         android:layout_marginRight="@dimen/_25sdp"
        android:id="@+id/tvpricavy"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/museosansrounded_900_webfont"
        android:drawableLeft="@mipmap/icn_privacy_white"
        app:layout_constraintTop_toBottomOf="@+id/vv"/>
    <TextView
android:id="@+id/tvtermsncon"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_height="wrap_content"
        android:text="@string/termsncon"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/museosansrounded_900_webfont"
        android:drawableLeft="@mipmap/icn_version_white"
        app:layout_constraintTop_toBottomOf="@+id/tvpricavy"/>
    <TextView
        android:id="@+id/tvversion"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
         android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13ssp"
        android:paddingLeft="@dimen/_30sdp"
        android:fontFamily="@font/museosansrounded_900_webfont"
         app:layout_constraintTop_toBottomOf="@+id/tvtermsncon"/>
    <TextView
        android:includeFontPadding="false"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.0"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_11ssp"
        android:paddingLeft="@dimen/_30sdp"
        android:id="@+id/tvversionNumber"
        android:fontFamily="@font/museosansrounded_700_webfont"
        app:layout_constraintTop_toBottomOf="@+id/tvversion"/>

    <TextView
        android:lineSpacingExtra="@dimen/_1sdp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:textStyle="italic"
        android:text="@string/in_loving_memory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvversionNumber"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        android:textColor="#27FFFFFF"
        android:fontFamily="@font/museosansrounded_900_webfont"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_70sdp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>